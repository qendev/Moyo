<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_moyoapp_Color"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:weightSum="3"
        android:padding="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:gravity="center_horizontal"
            android:background="@drawable/linearlayout_customborder"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/rockoultraflf"
                android:textColor="@color/text_white"
                android:text="Systolic/diastolic:"/>

            <TextView
                android:id="@+id/textViewSystolicDiastolic"
                android:layout_width="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rockoultraflf"
                android:textColor="@color/text_white"
                android:text="20"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:gravity="center_horizontal"
            android:background="@drawable/linearlayout_customborder"
            android:weightSum="2"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/rockoultraflf"
                android:textColor="@color/text_white"
                android:text="Heart Reate:"/>

            <TextView
                android:id="@+id/textViewHeartRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/rockoultraflf"
                android:textColor="@color/text_white"
                android:text="20"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:gravity="center_horizontal"
            android:background="@drawable/linearlayout_customborder"
            android:weightSum="2"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/rockoultraflf"
                android:textColor="@color/text_white"
                android:text="Level:"/>

            <TextView
                android:id="@+id/textViewlevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/rockoultraflf"
                android:textColor="@color/text_white"
                android:text="High"/>




        </LinearLayout>










    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>

