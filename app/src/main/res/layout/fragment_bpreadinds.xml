<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_moyoapp_Color"
    tools:context="fragments.bpreadindsFragment">

    <TextView
        android:id="@+id/textView_bpreadings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Final BP Readings"
        android:textColor="@color/text_white"
        android:fontFamily="@font/rockoultraflf"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_bpreadings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textView_bpreadings"/>




</androidx.constraintlayout.widget.ConstraintLayout>